@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section">
    <div class="hero-content">
        <h1>Welcome to Travel Palette</h1>
        <p>Discover Downtown Appleton like never before!</p>
        <p>Travel Palette is your ultimate trip planning companion, designed to help you explore the vibrant streets of Downtown Appleton, learn about its unique shops, and craft unforgettable experiences.</p>
        <a href="#" class="btn btn-primary">Start Planning Your Trip</a>
    </div>
    <div class="hero-image">
        
        <img src="~/img/logo.png" alt="Downtown Appleton">
    </div>
</div>

<div class="search-container">
    <h2>Find Your Next Adventure</h2>
    <div class="search-box">
        <input type="text" placeholder="Search...">
        <button type="submit">Search</button>
    </div>
</div>

<div class="features-section">
    <div class="feature">
        <!--   <img src="~/img/logo.png" alt="Explore"> -->
        <h3>Explore Downtown Appleton</h3>
        <p>Discover hidden gems, trendy boutiques, cozy cafes, and more as you navigate through the heart of the city.</p>
    </div>
    <div class="feature">
        <!-- <img src="~/img/logo.png" alt="Learn"> -->
        <h3>Learn About Local Shops</h3>
        <p>Get insider tips and detailed information about each shop, including hours, specialties, and must-try items.</p>
    </div>
    <div class="feature">
        <!--  <img src="~/img/logo.png" alt="Plan"> -->
        <h3>Plan Your Perfect Trip</h3>
        <p>Use our intuitive trip planner to create customized itineraries, save your favorite spots, and share your adventures with friends.</p>
    </div>
</div>

