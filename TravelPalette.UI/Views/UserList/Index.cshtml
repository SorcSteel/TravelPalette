@model IEnumerable<TravelPalette.BL.Models.UserList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListName)
            </td>
            <td>
                @Html.ActionLink("Edit List", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("View List", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete List", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
